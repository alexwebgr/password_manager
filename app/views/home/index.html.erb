<div class="row">
  <div class="col-6 offset-3" data-controller="toast">
    <h3>Upload file</h3>

    <%= form_with url: home_handle_upload_path, multipart: true, data: { remote: true } do %>
      <div class="row">
        <div class="col-10">
          <%= file_field_tag :filename, class: 'form-control', required: true %>
        </div>
        <div class="col">
          <%= submit_tag 'Upload', class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
