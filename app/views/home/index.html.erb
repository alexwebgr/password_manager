<div class="row" data-controller="toast">
  <div class="col-6 offset-3">
    <h3>Upload file</h3>

    <%= form_with url: home_handle_upload_path, multipart: true, data: { action: "ajax:success->toast#onPostSuccess ajax:error->toast#onPostError", remote: true } do %>
      <div class="row">
        <div class="col-10">
          <%= file_field_tag :filename, class: 'form-control', required: true %>
        </div>
        <div class="col">
          <%= submit_tag 'Upload', class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="row">
    <div class="col-12 mt-4" id="results">
      <table class="table table-bordered table-striped">
        <thead>
        <tr>
          <th scope="col">Result</th>
          <th scope="col">Name</th>
          <th scope="col">Password</th>
          <th scope="col">Errors</th>
        </tr>
        </thead>
        <tbody>

        </tbody>
      </table>
    </div>
  </div>
</div>
